<div class="top">
  <h2>いまどうしてる？をつぶやこう</h2>
  <div class="tweets">
    <h2>つぶやき</h2>
    <ul>
        <% @tweets.each do |tweet| %>
      <li>
        <!--<%= tweet[0] %>: <%= tweet[1] %>-->
        <!--<span><%= tweet[2] %></span>-->
        <%= tweet.name %>: <%= tweet.tweet %>
        <span><%= tweet.created_at.strftime('%Y/%m/%d %H:%M:%S') %></span>
      </li>
      <% end %>
    </ul>
  </div>
  <div class="question">
    <h2>お問い合わせ</h2>
    <ul>
        <% @questions.each do |question| %>
      <li>
        <%= question[0] %>: <%= question[1] %>: <%= question[2] %>
        <span><%= question[3] %></span>
      </li>
      <% end %>
    </ul>
  </div>
</div>