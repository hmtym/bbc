<div class="new-qa">
  <p>お気軽にお問い合わせ下さい。</p>
  <div class="errors">
    <% @errors.each do |error| %>
    <p><%= error %></p>
    <% end %>
  </div>
    <%= form_tag("/question/create") do %>
        <div class="text-wrap">
          <input type="text" name="name" placeholder="名前" value="<%= params[:name] %>"/>
        </div>
        <div class="text-wrap">
          <input type="text" name="address" placeholder="メールアドレス" value="<%= params[:address] %>"/>
        </div>
        <div class="textarea-wrap">
          <textarea name="question" placeholder="お問い合わせ内容"><%= params[:question] %></textarea>
        </div>
        <input type="submit" value="送信" />
    <% end %>
</div>